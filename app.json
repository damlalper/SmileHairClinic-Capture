{
  "expo": {
    "name": "Smile Hair Capture",
    "slug": "smile-hair-capture",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E5090"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Bu uygulama saç analizi fotoğrafları çekmek için kamera erişimine ihtiyaç duyar.",
        "NSMotionUsageDescription": "Bu uygulama doğru fotoğraf açısını belirlemek için hareket sensörlerine ihtiyaç duyar."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2E5090"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.damlalper.smilehaircapture"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "Bu uygulama saç analizi fotoğrafları çekmek için kamera erişimine ihtiyaç duyar.",
          "enableMicrophonePermission": false
        }
      ],
      "expo-font",
      "expo-asset",
      [
        "react-native-permissions",
        {
          "iosPermissions": [
            "Camera",
            "Motion"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "4dfef98b-0a04-4d75-bd57-ee27b9dc2f00"
      }
    }
  }
}
